---
import { Button } from '@/components/ui/Button'
---

<section
  class="w-full flex justify-center py-12 md:py-24 lg:py-32 xl:py-48 dark:bg-gray-950"
>
  <div class="container px-4 md:px-6">
    <div class="flex flex-col items-center space-y-4 text-center">
      <div class="space-y-2">
        <h1
          class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none dark:text-gray-100"
        >
          Manage Your Mobile Balance and Data with Suri
        </h1>
        <p
          class="mx-auto max-w-[700px] text-gray-500 md:text-xl dark:text-gray-400"
        >
          Easily manage your mobile credit and data plans. Top up your balance
          and stay connected anytime, anywhere.
        </p>
      </div>
      <div class="space-x-4">
        <Button>
          <a href="#download" id="hero_download">Download Now</a>
        </Button>
        <Button variant="outline">
          <a href="#how-it-works" id="how-it-works">Learn More</a>
        </Button>
      </div>
    </div>
  </div>
</section>

<script>
  import { track } from '@vercel/analytics'

  const downloadBtn = document.querySelector('#hero_download')
  const howItWorks = document.querySelector('#how-it-works')

  downloadBtn?.addEventListener('click', () => {
    track('click_download', {
      location: 'hero',
    })
    posthog.capture('click_download', { location: 'hero' })
  })

  howItWorks?.addEventListener('click', () => {
    track('click_how_it_works', {
      location: 'hero',
    })
    posthog.capture('click_how_it_works', { location: 'hero' })
  })
</script>
