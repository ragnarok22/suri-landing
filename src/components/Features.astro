---
import { PhoneIcon, CreditCardIcon, WifiIcon } from 'lucide-react';
---

<section id="features" class="w-full py-12 md:py-24 lg:py-32 bg-gray-100 dark:bg-gray-800">
	<div class="container px-4 md:px-6">
		<h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-center mb-8">Features</h2>
		<div class="grid gap-10 sm:grid-cols-2 md:grid-cols-3">
			<div class="flex flex-col items-center text-center">
				<PhoneIcon className="h-12 w-12 mb-4 text-primary" />
				<h3 class="text-xl font-bold mb-2">Check Balance</h3>
				<p class="text-gray-500 dark:text-gray-400">View your current mobile credit and data balance instantly.</p>
			</div>
			<div class="flex flex-col items-center text-center">
				<CreditCardIcon className="h-12 w-12 mb-4 text-primary" />
				<h3 class="text-xl font-bold mb-2">Easy Top-up</h3>
				<p class="text-gray-500 dark:text-gray-400">Add credit to your account with just a few taps.</p>
			</div>
			<div class="flex flex-col items-center text-center">
				<WifiIcon className="h-12 w-12 mb-4 text-primary" />
				<h3 class="text-xl font-bold mb-2">Data Plans</h3>
				<p class="text-gray-500 dark:text-gray-400">Browse and purchase mobile data plans that suit your needs.</p>
			</div>
		</div>
	</div>
</section>
