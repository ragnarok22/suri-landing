---
import Layout from '@/layouts/Layout.astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'

const lastUpdated = 'September 3, 2024'
---

<Layout title="Suri | Terms of Service">
  <Header />
  <section
    class="min-h-screen bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200"
  >
    <div class="container mx-auto p-6">
      <h1 class="text-3xl font-bold mb-4">Suri App Terms of Service</h1>
      <p class="text-sm text-gray-500 dark:text-gray-400">
        Last Updated: {lastUpdated}
